{
  "parser": "babel-eslint",
  "extends": "standard",
  "plugins": ["babel", "standard"],
  "rules": {
    "no-console": 0,
    "linebreak-style": [2, "unix"],

    "arrow-parens": 0,

    "babel/generator-star-spacing": 1,
    "babel/new-cap": 1,
    "babel/array-bracket-spacing": 1,
    "babel/object-shorthand": 1,
    "babel/arrow-parens": 1,
    "babel/no-await-in-loop": 1
  },
  "env": {
    "mocha": true,
    "jasmine": true
  },
  "globals": {
    "fetch": true,
    "FormData": true
  }
}
